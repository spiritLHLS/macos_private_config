{
  "title": "Control-C to Command-C",
  "rules": [
    {
      "description": "将 Ctrl+C 映射为 Command+C",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "c",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "key_code": "c",
              "modifiers": ["command"]
            }
          ]
        }
      ]
    }
  ]
}
