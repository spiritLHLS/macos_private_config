{
  "title": "Control-C Plain Copy and Control-A-D Exit",
  "rules": [
    {
      "description": "定义Ctrl+C为无格式复制",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "c",
            "modifiers": {
              "mandatory": [
                "left_control"
              ]
            }
          },
          "to": [
            {
              "key_code": "c",
              "modifiers": [
                "left_shift",
                "left_option",
                "left_command"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Control+A+D 触发退出（示例：发送 F13）",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "simultaneous": [
              {
                "key_code": "a"
              },
              {
                "key_code": "d"
              }
            ],
            "modifiers": {
              "mandatory": [
                "left_control"
              ]
            }
          },
          "to": [
            {
              "key_code": "f13"
            }
          ]
        }
      ]
    }
  ]
}
